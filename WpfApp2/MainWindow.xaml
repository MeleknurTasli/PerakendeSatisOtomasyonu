                <ListBox  x:Name="listbox" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontFamily="Century Gothic" FontSize="20" VerticalAlignment="Center" MouseDoubleClick="listbox_MouseDoubleClick" >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" >
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True" >
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <!--<Setter Property="Foreground" Value="Black" />-->
                                </Trigger>
                            </Style.Triggers>
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                <!-- Background of selected item when focussed -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="LightCyan"/>
                                <!-- Background of selected item when not focussed -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="LightGray" />
                            </Style.Resources>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Popup>

        <Popup x:Name="progressPopup" Placement="Center" AllowsTransparency="True"  PopupAnimation="Slide" StaysOpen="True" Width="350" Height="40"  Opened="cpmPopup_Opened" Closed="cpmPopup_Closed" >
            <Border BorderThickness="5" BorderBrush="#FF14526E" Background="#FF14526E" CornerRadius="17">
                <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" VerticalAlignment="Center" Maximum="121" Minimum="0"  Height="20" Width="300" Foreground="Green" Background="AliceBlue" Orientation="Horizontal" ></ProgressBar>
            </Border>
        </Popup>

        <Popup x:Name="Popup_transfer" Placement="Center" AllowsTransparency="True"  PopupAnimation="Slide" StaysOpen="False" Opened="cpmPopup_Opened" Closed="cpmPopup_Closed" >
            <Border BorderThickness="5" BorderBrush="#FF14526E" Background="#FF14526E" CornerRadius="17">
                <Grid Width="300" Height="300" Background="#FF14526E" >
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Margin="20,30,20,20" Text="Transfer tercihinizi seçin." HorizontalAlignment="Center" Foreground="White" FontSize="25" TextWrapping="Wrap" FontWeight="Bold"></TextBlock>
                        <ComboBox x:Name="cbtransfer"  Margin="20,0,0,40" Foreground="White" FontSize="15" Style="{StaticResource Dictionary2}" Width="200" Height="30" HorizontalAlignment="Left" >
                            <!--<ComboBoxItem Content="None"></ComboBoxItem>
                            <ComboBoxItem Content="SKOD1"></ComboBoxItem>
                            <ComboBoxItem Content="SKOD2"></ComboBoxItem>
                            <ComboBoxItem Content="SKOD3"></ComboBoxItem>
                            <ComboBoxItem Content="SKOD4"></ComboBoxItem>
                            <ComboBoxItem Content="SKOD5"></ComboBoxItem>
                            <ComboBoxItem Content="BKOD1"></ComboBoxItem>
                            <ComboBoxItem Content="BKOD2"></ComboBoxItem>
                            <ComboBoxItem Content="BKOD3"></ComboBoxItem>
                            <ComboBoxItem Content="BKOD4"></ComboBoxItem>
                            <ComboBoxItem Content="BKOD5"></ComboBoxItem>-->
                        </ComboBox>
                        <Button x:Name="Kaydet" Margin="0,0,0,10" HorizontalAlignment="Center" Width="80"  Content="Kaydet" FontSize="14" Foreground="White"  Background="#44296CA5" Height="40"  Style="{StaticResource Dictionary5}" Click="Kaydet_Click" >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button x:Name="kapat3" HorizontalAlignment="Center" Width="80" Content="Kapat" FontSize="14" Foreground="White"  Background="#44296CA5" Height="40"  Style="{StaticResource Dictionary5}" Click="kapat3_Click" >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="15"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <Popup x:Name="kasaPopup" Placement="Center" PopupAnimation="Scroll" StaysOpen="False" Height="485" Width="600"  Closed="cpmPopup_Closed" Opened="cpmPopup_Opened">
            <Border BorderThickness="5" BorderBrush="#FF14526E" Background="#FF14526E" CornerRadius="17" Padding="15" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="450*"></RowDefinition>
                        <RowDefinition Height="35*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TabControl x:Name="tabKasa" Grid.ColumnSpan="2" Grid.Row="0" Background="Transparent" BorderThickness="0" ></TabControl>
                    <Button x:Name="kapatkasa" Foreground="White" Content="KAPAT" Grid.ColumnSpan="2" FontFamily="CENTURY GOTHIC" FontSize="20" Grid.Row="1" Margin="0,5,5,0"  Background="#FF296CA5" Grid.Column="0"  Style="{StaticResource Dictionary5}" Click="kapatkasa_Click" >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="13"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Popup>
        
        
    </Grid>
    
</Window>
