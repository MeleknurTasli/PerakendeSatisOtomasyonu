                                                <Trigger Property="IsKeyboardFocused" Value="true">
                                                    <Setter Property="BorderBrush" TargetName="border2" Value="#FF20ABFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Label Content="Şifresi:" Foreground="White" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSifre2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="35" FontSize="18" BorderThickness="2" Foreground="#FF065D58" FontFamily="Arial"  BorderBrush="Transparent" Opacity="0.5"  >
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="13" />
                                    </Style>
                                </Style.Resources>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border x:Name="border2" CornerRadius="13" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="false">
                                                    <Setter Property="Opacity" TargetName="border2" Value="0.56"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter Property="BorderBrush" TargetName="border2" Value="#FF20ABFF"/>
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="true">
                                                    <Setter Property="BorderBrush" TargetName="border2" Value="#FF20ABFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button x:Name="btnCikar" Style="{StaticResource Dictionary5}" Content="Sil" FontSize="20" Height="40" Foreground="White" Background="#FF236D8E" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,15,0,0" Click="btnCikar_Click"  />
                    <TextBlock x:Name="durum2" Background="Transparent" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,15,0,20" Height="25"></TextBlock>
                    <Button x:Name="kullaniciGor2" Style="{StaticResource Dictionary5}" Content="Kullanıcı Listesi Gör"  Background="Transparent" Foreground="White" FontSize="15"  Click="kullaniciGor2_Click"></Button>
                    <DataGrid x:Name="DGkullanicilar2" HorizontalContentAlignment="Center" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Background="Transparent" BorderBrush="Transparent" AutoGenerateColumns = "TRUE" CanUserAddRows="False" CanUserReorderColumns="False" CanUserDeleteRows="False" Width="300" Height="150"  Margin="0,15,0,15">
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"  Color="#FF03BADC"/>
                        </DataGrid.Resources>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="BorderBrush" Value="White" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="Padding" Value="10" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="BorderBrush" Value="White" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="BorderBrush" Value="White" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <Button x:Name="btnKapat2" Style="{StaticResource Dictionary5}" Content="Kapat" Width="60" Height="45" FontSize="20" Foreground="White" Background="#FF236D8E" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnKapat2_Click"  >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Popup>



