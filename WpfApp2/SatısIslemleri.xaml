                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,0,0,5"  VerticalAlignment="Bottom" >Evrak Tarih:</TextBlock>
