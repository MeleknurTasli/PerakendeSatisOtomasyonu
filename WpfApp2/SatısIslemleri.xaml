                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0"  VerticalAlignment="Bottom">Evrak No:</TextBlock>
                        <TextBox Grid.Column="1" BorderThickness="0.5" BorderBrush="Transparent"  Height="27" FontSize="20" Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" >Döviz Cins:</TextBlock>
                        <TextBox x:Name="txtDovizCins" Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" GotFocus="txtDovizCins_GotFocus" >
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <ComboBox x:Name="cb_dovizcins" Grid.Column="1" Margin="0,5,0,0" BorderThickness="0" Foreground="White" Visibility="Hidden" VerticalAlignment="Bottom"  Height="1" Style="{StaticResource Dictionary2}" SelectionChanged="cb_dovizcins_SelectionChanged" FontFamily="Century Gothic" FontSize="14">
                        </ComboBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap" >Evrak Döviz Cins:</TextBlock>
                        <TextBox x:Name="txtEvrakDovizCins" Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" GotFocus="txtEvrakDovizCins_GotFocus">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <ComboBox x:Name="cb_evrakdovizcins" Grid.Column="1" Margin="0,5,0,0" BorderThickness="0" Foreground="White" Visibility="Hidden" VerticalAlignment="Bottom"  Height="1" Style="{StaticResource Dictionary2}" SelectionChanged="cb_evrakdovizcins_SelectionChanged" FontFamily="Century Gothic" FontSize="14">
                        </ComboBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap" >Vergi Kimlik No:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Margin="5,10,10,10" Padding="5,5,3,5" BorderBrush="White" BorderThickness="0.5" Grid.Row="1" Grid.RowSpan="3" Grid.Column="6" Grid.ColumnSpan="3" VerticalAlignment="Top" >
            <GroupBox.Header>
