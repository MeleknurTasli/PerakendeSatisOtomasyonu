                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="White">Evrak Toplam</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <ScrollViewer Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=GroupBox}, Path=Height}" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Bottom" VerticalContentAlignment="Center" >
