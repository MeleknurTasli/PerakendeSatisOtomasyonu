                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="/WpfTutorialSamples;component/Images/group.png" Margin="3,0" />-->
                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="White">Evrak Başlık Bilgileri</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <ScrollViewer Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=GroupBox}, Path=Height}" VerticalScrollBarVisibility="Hidden" >
