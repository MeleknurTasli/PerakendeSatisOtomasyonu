                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" >Net Tutar:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" >KDV:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap">Genel Toplam:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap">Genel İskonto Tutar:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap">Genel Net Tutar:</TextBlock>
                        <TextBox Grid.Column="1" Margin="0,5,0,0" BorderThickness="0.5" BorderBrush="Transparent"   Height="27" FontSize="20"  Background="#66427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                    <!--<Button Margin="0,20">Add User</Button>-->
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <!--</ScrollViewer>-->

        <GroupBox Margin="10,10,5,10" Padding="5,5,3,5" BorderBrush="White" BorderThickness="0.5" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" VerticalContentAlignment="Center" VerticalAlignment="Top" >
