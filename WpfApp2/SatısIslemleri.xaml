        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/icons/barcode beyaz.png" Margin="10,0,5,5" MaxHeight="55" ></Image>
            <TextBox x:Name="txtBrkd" Margin="5,0,0,5" Grid.Column="1" VerticalAlignment="Stretch" MaxHeight="55" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Background="#99143D5A" BorderBrush="White" FontSize="20" Foreground="White" CaretBrush="Transparent" TextChanged="txtBrkd_TextChanged" KeyDown="txtBrkd_KeyDown" >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <!--<ComboBox x:Name="cbMalad" StaysOpenOnEdit="True" Margin="5,0,0,5" Visibility="Hidden" Grid.Column="1" BorderThickness="0" Foreground="White" VerticalAlignment="Bottom" Height="1" Style="{StaticResource Dictionary2}" HorizontalAlignment="Stretch">
                -->
            <!--<ComboBoxItem Visibility="Visible" ></ComboBoxItem>-->
            <!--
            </ComboBox>-->
        </Grid>


        <GroupBox x:Name="gbdepo" Margin="10,10,10,10" Padding="5,5,3,5" BorderBrush="White" BorderThickness="0.5" Grid.Row="5" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Stretch" >
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="/WpfTutorialSamples;component/Images/group.png" Margin="3,0" />-->
                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="White">Depo Bilgileri</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <ListBox  x:Name="listdepo" Background="Transparent" FontFamily="Arial" FontSize="17" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="5"></ListBox>
        </GroupBox>

        <GroupBox Margin="10,10,10,10" Padding="5,5,3,5" BorderBrush="White" BorderThickness="0.5" Grid.Row="5" Grid.RowSpan="4" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Stretch" >
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <!--<Image Source="/WpfTutorialSamples;component/Images/group.png" Margin="3,0" />-->
                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="White">Stok Kart Bilgileri</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <ScrollViewer Name="c_dataGridScrollViewer"
              Loaded="c_dataGridScrollViewer_Loaded"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="c_dataGrid" SelectionMode="Single" VerticalAlignment="Center" HorizontalAlignment="Center" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" HorizontalScrollBarVisibility="Auto" VerticalContentAlignment="Center" Background="Transparent" Foreground="Black" BorderBrush="White" BorderThickness="0.5" IsReadOnly="True" Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=GroupBox}, Path=Height}" AutoGeneratedColumns="c_dataGrid_AutoGeneratedColumns"  Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=GroupBox}, Path=Width}" >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#33ADD8E6" />
                            <Setter Property="BorderThickness" Value="0.5" />
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <TransformGroup>
                                        <RotateTransform Angle="90"/>
                                    </TransformGroup>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#66ADD8E6" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.LayoutTransform>
                        <TransformGroup>
                            <RotateTransform Angle="-90"/>
                        </TransformGroup>
                    </DataGrid.LayoutTransform>
                </DataGrid>
            </ScrollViewer>
        </GroupBox>



        <Popup x:Name="Popup" Placement="Center" AllowsTransparency="True"  PopupAnimation="Slide" StaysOpen="False"  >
            <!--HorizontalOffset="-100" VerticalOffset="-100"-->
            <Grid Width="400" Height="300" Background="#FF5ccdff" >
                <!--<Button x:Name="geri" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="40" Click="geri_Click" Content="TAMAM" FontSize="16" FontFamily="Century" Foreground="#FF04365F" BorderBrush="#FF07C7C3" Background="#FF07C7C3"/>-->
                <ListBox  x:Name="lbMalad" TextSearch.TextPath="MALAD" IsTextSearchEnabled="True" Background="#FF5ccdff" FontFamily="Arial" FontSize="13" IsSynchronizedWithCurrentItem="False" MouseDoubleClick="lbMalad_MouseDoubleClick" >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True" >
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="Black" />
                                </Trigger>
                            </Style.Triggers>
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                <!-- Background of selected item when focussed -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="LightCyan"/>
                                <!-- Background of selected item when not focussed -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="LightGray" />
                            </Style.Resources>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Popup>

    </Grid>
</Window>




