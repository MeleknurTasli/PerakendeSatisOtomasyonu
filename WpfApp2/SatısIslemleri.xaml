            </Grid.Background>
        </Grid>

        <Button x:Name="Geri"  Margin="10,3,0,0" Background="Transparent" BorderThickness="0" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Dictionary3}" Click="Geri_Click">
            <Image Source="icons\back-arrow@2x.png" ></Image>
        </Button>


        <!--<StackPanel Orientation="Horizontal" Grid.ColumnSpan="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,3,0,0">
            <Image Width="40" Height="40" Margin="0,0,15,0" Source="/icons/sat.png"  ></Image>
            <TextBlock Foreground="White"  FontFamily="Century Gothic" FontSize="35" >SATIŞ İŞLEMLERİ</TextBlock>
        </StackPanel>-->




        <!--<ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Hidden" Grid.Row="6" Grid.RowSpan="3" Grid.ColumnSpan="4" VerticalAlignment="Bottom" CanContentScroll="True" >-->
        <GroupBox Margin="10,10,10,10" Padding="5,5,3,5" BorderBrush="White" BorderThickness="0.5" Grid.Column="6" Grid.Row="5" Grid.RowSpan="4" Grid.ColumnSpan="3" VerticalAlignment="Stretch" VerticalContentAlignment="Bottom">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
