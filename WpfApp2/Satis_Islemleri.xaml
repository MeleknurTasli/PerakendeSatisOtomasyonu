<Window x:Class="WpfApp2.Satıs_Islemleri"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Satış İşlemleri" Height="800" Width="1150" Closing="Window_Closing" IsHitTestVisible="True" >
    
    <Grid x:Name="MainGrid" Loaded="MainGrid_Loaded">
        <Grid.Background>
            <LinearGradientBrush >
                <GradientStop Color="#FF000D12" Offset="-0.2"  />
                <GradientStop Color="#ff156F90" Offset="1"/>
                <!--#FF132043 ile siyah güzel ama iç karartıcı...   #FF0E454B bu yeşil güzel    #FF21384B eski textbox rengi-->
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <!--4 idi eskiden bura-->
            <!--2 3 4 ve 5 7 9-->
            <RowDefinition Height="7*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="10" Grid.RowSpan="10">
            <Grid.Background>
                <ImageBrush ImageSource="/icons/pngeggddd.png" Stretch="UniformToFill" Opacity="0.15" />
            </Grid.Background>
        </Grid>

        <Button x:Name="Geri"  Margin="10,2,0,0" Background="Transparent" BorderThickness="0" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource Dictionary3}" Click="Geri_Click">
            <Image Source="icons\back-arrow@2x.png" ></Image>
        </Button>


        <ToggleButton x:Name="_switch" Grid.Column="8" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="Transparent" Width="100" Height="40" Margin="5" Style="{StaticResource Dictionary6}" >
            <ToggleButton.Background>
                <ImageBrush x:Name="switchimage" ImageSource="\icons\acıkswitch.png"  Stretch="Uniform"></ImageBrush>
            </ToggleButton.Background>
        </ToggleButton>

        <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="Kaydet" Margin="5" Height="40"  Background="#44296CA5" Grid.Column="0"  VerticalAlignment="Top" Style="{StaticResource Dictionary5}" Click="Kaydet_Click" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Width="30" Height="30" Margin="0,0,10,0" Source="icons/kaydet.png" ></Image>
                    <TextBlock Foreground="White" VerticalAlignment="Center" FontFamily="CENTURY GOTHIC" FontSize="14" FontWeight="SemiBold">Kaydet</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="Yeni" Margin="5" Background="#44296CA5" Height="40" Grid.Column="2"  VerticalAlignment="Top" Style="{StaticResource Dictionary5}" Click="Yeni_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Width="25" Height="25" Margin="0,0,10,0" Source="\icons\duzenle.png" ></Image>
                    <TextBlock Foreground="White" VerticalAlignment="Center" FontFamily="CENTURY GOTHIC" FontSize="14" FontWeight="SemiBold">Yeni</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="Goruntule" Margin="5" Height="40" Background="#66296CA5" Grid.Column="1"  VerticalAlignment="Top" Style="{StaticResource Dictionary5}" Click="Goruntule_Click" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Width="30" Height="30" Margin="5,0,10,0" Source="\icons\goz.png"  ></Image>
                    <TextBlock Foreground="White" VerticalAlignment="Center" FontFamily="CENTURY GOTHIC" FontSize="13" FontWeight="SemiBold">Görüntüle</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="Sil" Margin="5" Height="40" Background="#66296CA5" Grid.Column="3" VerticalAlignment="Top" Style="{StaticResource Dictionary5}" Click="Sil_Click" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Width="30" Height="25" Margin="0,0,10,0" Source="\icons\sil.png" ></Image>
                    <TextBlock Foreground="White" VerticalAlignment="Center" FontFamily="CENTURY GOTHIC" FontSize="14" FontWeight="SemiBold">Sil</TextBlock>
                </StackPanel>
            </Button>
        </Grid>

        <Image x:Name="urunresmi" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Margin="33,70,33,35" Stretch="Uniform" Source="icons/cpm-logo-yazili-beyaz_c@2x.png"></Image>

        <Grid Name="mainGrid"  Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Margin="33,70,33,30" >
            <Viewport3D Name="mainViewport"/>
        </Grid>

        <Border Margin="3" Grid.Row="0" Grid.ColumnSpan="9" BorderThickness="1" BorderBrush="White" CornerRadius="15" Padding="5">
            <Grid x:Name="gridevrakbaslik" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition x:Name="r1"></RowDefinition>
                    <RowDefinition x:Name="r2"></RowDefinition>
                    <RowDefinition x:Name="r3"></RowDefinition>
                    <RowDefinition x:Name="r4"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" HorizontalAlignment="Stretch" Background="#66156F90" HorizontalContentAlignment="Center" Grid.Column="1" Grid.ColumnSpan="5" FontSize="15" FontWeight="Bold" Foreground="White">Evrak Başlık Bilgileri</Label>

                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="1" Grid.Column="0" Margin="2,0,0,0" FontSize="16">Unvan:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="2" Grid.Column="0" Margin="2,0,0,0" FontSize="16">Cari Kodu:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="3" Grid.Column="0" Margin="2,0,0,0" FontSize="16">Vergi No:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="4" Grid.Column="0" Margin="2,0,0,0" FontSize="16">Sipariş No:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="1" Grid.Column="2" Margin="2,0,0,0" FontSize="16" >Evrak Tipi:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="2" Grid.Column="2" Margin="2,0,0,0" FontSize="16" >Evrak No:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="3" Grid.Column="2" Margin="2,0,0,0" FontSize="16" >Evrak Tarihi:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="4" Grid.Column="2" Margin="2,0,0,0" FontSize="16" >Vade Tarihi:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="1" Grid.Column="4" Margin="2,0,0,0" FontSize="16" >Döviz Cinsi:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="2" Grid.Column="4" Margin="2,0,0,0" FontSize="16" >Kasa Tanımı:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="3" Grid.Column="4" Margin="2,0,0,0" FontSize="16" >Kasa No:</TextBlock>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" Grid.Row="4" Grid.Column="4" Margin="2,0,0,0" FontSize="16" >Kasiyer:</TextBlock>

                <TextBox x:Name="txt1" FontWeight="Bold" Margin="3,2,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1" BorderThickness="0.5" BorderBrush="White" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" KeyDown="txt1_KeyDown" ></TextBox>
                <TextBox x:Name="txt2" FontWeight="Bold" Margin="3,2,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="2" BorderThickness="0.5" BorderBrush="White" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" KeyDown="txt2_KeyDown" ></TextBox>
                <TextBox x:Name="txt3" FontWeight="Bold" Margin="3,2,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="3" BorderThickness="0.5" BorderBrush="White" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" KeyDown="txt3_KeyDown" ></TextBox>
                <TextBox x:Name="txt4" FontWeight="Bold" Margin="3,2,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="4" BorderThickness="0.5" BorderBrush="White" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox x:Name="txt5" FontWeight="Bold" Margin="3,2,3,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="3" Grid.Row="1" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox x:Name="txt6" FontWeight="Bold" Margin="3,2,3,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="3" Grid.Row="2" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox x:Name="txt7" FontWeight="Bold" Margin="3,2,3,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="3" Grid.Row="3" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox  x:Name="txt8"  FontWeight="Bold" Margin="3,2,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="3" Grid.Row="4" BorderThickness="0.5" BorderBrush="White" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" GotFocus="txt8_GotFocus" LostFocus="txt8_LostFocus" KeyDown="txt8_KeyDown" ></TextBox>
                <ComboBox x:Name="cbdate" Grid.Column="3" Margin="3,2,3,0" Visibility="Hidden" Grid.Row="4" BorderThickness="0" Foreground="White" VerticalAlignment="Bottom" StaysOpenOnEdit="True" Height="1" Style="{StaticResource Dictionary2}">
                    <ComboBoxItem Visibility="Visible" >
                        <DatePicker x:Name="dp" BorderThickness="0" Background="Transparent" Opacity="0.7" SelectedDateChanged="selected_date_changed"></DatePicker>
                    </ComboBoxItem>
                </ComboBox>
                <TextBox x:Name="txt9" FontWeight="Bold" Margin="3,2,50,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="1" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" TextChanged="txt9_TextChanged" ></TextBox>
                <TextBox x:Name="txt10" FontWeight="Bold" Margin="3,2,50,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="2" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox x:Name="txt11" FontWeight="Bold" Margin="3,2,50,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="3" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>
                <TextBox x:Name="txt12" FontWeight="Bold" Margin="3,2,50,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="4" BorderThickness="0.5" BorderBrush="Transparent" FontSize="18"  Background="Transparent" IsEnabled="False" Foreground="White" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" ></TextBox>

                <Button x:Name="evrakara" Grid.Column="5" Width="30" Height="25" HorizontalAlignment="Right" BorderBrush="Transparent" Margin="3" Style="{StaticResource Dictionary5}" Click="evrakara_Click"  >
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/ara.png" ></ImageBrush>
                    </Button.Background>
                </Button>
                <TextBox x:Name="txtevrakkod" Visibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="4" Grid.ColumnSpan="2"  Margin="0,0,40,0" BorderThickness="0.5" BorderBrush="White" FontSize="20"  Background="#88427B8C" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" KeyDown="txtevrakkod_KeyDown" >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>
        </Border>

        <UniformGrid  x:Name="grid_ef" Columns="2" Grid.ColumnSpan="8" Margin="20,40,0,20" HorizontalAlignment="Left" Width="0" VerticalAlignment="Center" >
            <!--<CheckBox Content="e-Fatura" Foreground="White" VerticalAlignment="Center" Style="{StaticResource CheckboxStyle}" FontFamily="Century Gothic" FontSize="16" ></CheckBox>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Row="1" Width="150" FontSize="16">PK Adresi:</TextBlock>
                <TextBox x:Name="txtPK" FontWeight="Bold" Margin="15,5,0,5"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0.5" BorderBrush="White" Width="240" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" ></TextBox>
            </StackPanel>
            <CheckBox Content="e-İrsaliye" Foreground="White" VerticalAlignment="Center" Style="{StaticResource CheckboxStyle}" FontFamily="Century Gothic" FontSize="16"  ></CheckBox>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Row="1" Width="150" FontSize="16">e-İrsaliye PK Adresi:</TextBlock>
                <TextBox x:Name="txtIrsPK" FontWeight="Bold" Margin="15,5,0,5"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0.5" BorderBrush="White" Width="240" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Row="1" Width="150"  FontSize="16">e-İrsaliye PK Adresi:</TextBlock>
                <TextBox x:Name="txtGBadres" FontWeight="Bold" Margin="15,5,0,5"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0.5" BorderBrush="White" Width="240" FontSize="18"  Background="Transparent" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" ></TextBox>
            </StackPanel>-->
        </UniformGrid>
        <UniformGrid  x:Name="grid_ea" Columns="2" Grid.ColumnSpan="8" Margin="20,40,0,20" HorizontalAlignment="Left" Width="0" VerticalAlignment="Center" ></UniformGrid>
        <UniformGrid  x:Name="grid_ei" Columns="2" Grid.ColumnSpan="8" Margin="20,40,0,20" HorizontalAlignment="Left" Width="0" VerticalAlignment="Center" ></UniformGrid>

        <StackPanel Orientation="Vertical" Grid.Column="8" Grid.Row="0" Margin="0,45,3,0" HorizontalAlignment="Right">
            <ToggleButton x:Name="efat"  Width="50" Height="47" BorderBrush="Transparent" Margin="0,0,0,0" Checked="efat_Checked" Unchecked="efat_Unchecked"  >
                <ToggleButton.Background>
                    <ImageBrush ImageSource="\icons\e-fatura-icon2.png" Stretch="Uniform"></ImageBrush>
                </ToggleButton.Background>
                <ToggleButton.Resources>
                    <Style TargetType="ToggleButton">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Name="border" 
                        BorderThickness="0.5"
                        BorderBrush="Transparent"  
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF16C2D3" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Resources>
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Hide1">
                                <DoubleAnimation    
                                                Storyboard.TargetName="grid_ef"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}" To="0"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Show1">
                                <DoubleAnimation
                                                Storyboard.TargetName="grid_ef"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="0" To="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
            <ToggleButton x:Name="eirs"  Width="50" Height="47" BorderBrush="Transparent" Margin="0,0,0,0" Checked="eirs_Checked" Unchecked="eirs_Unchecked"  >
                <ToggleButton.Background>
                    <ImageBrush ImageSource="\icons\e-irsaliye-icon2.png" Stretch="Uniform"></ImageBrush>
                </ToggleButton.Background>
                <ToggleButton.Resources>
                    <Style TargetType="ToggleButton">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Name="border" 
                        BorderThickness="0.5"
                        BorderBrush="Transparent"  
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF16C2D3" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Resources>
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Hide2">
                                <DoubleAnimation    
                                                Storyboard.TargetName="grid_ei"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}" To="0"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Show2">
                                <DoubleAnimation
                                                Storyboard.TargetName="grid_ei"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="0" To="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
            <ToggleButton x:Name="ears"  Width="50" Height="47" BorderBrush="Transparent" Margin="0,0,0,0" Checked="ears_Checked" Unchecked="ears_Unchecked"  >
                <ToggleButton.Background>
                    <ImageBrush ImageSource="\icons\e-arsiv-icon2.png" Stretch="Uniform"></ImageBrush>
                </ToggleButton.Background>
                <ToggleButton.Resources>
                    <Style TargetType="ToggleButton">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Name="border" 
                        BorderThickness="0.5"
                        BorderBrush="Transparent"  
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF16C2D3" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Resources>
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Hide4">
                                <DoubleAnimation    
                                                Storyboard.TargetName="grid_ea"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}" To="0"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="Show4">
                                <DoubleAnimation
                                                Storyboard.TargetName="grid_ea"
                                                Storyboard.TargetProperty="Width"
                                                BeginTime="0:0:0"
                                                From="0" To="{Binding ElementName=gridevrakbaslik, Path=ActualWidth}"
                                                Duration="0:0:0.2">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
        </StackPanel>

        <Border Grid.Row="1" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="White" CornerRadius="15" Padding="5" Margin="3">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Stretch" Margin="5,0,5,0" Background="#66156F90" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="White">Versiyon ve Depo Bilgileri</Label>

                <ScrollViewer Grid.Row="1" Margin="0,0,0,0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <DataGrid x:Name="depo_dataGrid"  SelectionMode="Single" Grid.Row="1" Margin="3" VerticalAlignment="Top" HorizontalAlignment="Center" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Center" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="0.5" IsReadOnly="True" IsEnabled="True" >
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"  Color="#FF03BADC"/>
                            </DataGrid.Resources>
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#bb0593AE" />
                                    <Setter Property="BorderThickness" Value="0.5" />
                                    <Setter Property="BorderBrush" Value="White" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontSize" Value="15" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#882793B6" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="IsHitTestVisible" Value="False"/>
